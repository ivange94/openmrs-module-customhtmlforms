<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>${project.parent.artifactId}</id>
	<name>${project.parent.name}</name>
	<version>${project.parent.version}</version>
	<package>org.openmrs.module.customhtmlforms</package>
	<author>larry</author>
	<description>
			${project.parent.description}
	</description>

	<activator>org.openmrs.module.customhtmlforms.CustomHtmlFormsActivator</activator>
	
	<!-- <updateURL>https://modules.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->

	<require_version>${openmrsPlatformVersion}</require_version>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>org.openmrs.module.customhtmlforms.extension.html.AdminList</class>
	</extension>


	<extension>
		<point>org.openmrs.gutter.tools</point>
		<class>org.openmrs.module.customhtmlforms.extension.html.GutterListExt</class>
	</extension>

	<aware_of_modules>
		<aware_of_module>org.openmrs.module.legacyui</aware_of_module>
	</aware_of_modules>
	<require_modules>
		<require_module version="2.16">org.openmrs.module.webservices.rest</require_module>
	</require_modules>
	
	
	<!-- AOP
